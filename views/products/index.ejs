<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body>
    <%- include('../partials/navbar') %>
    <div class="container">
        <h1>Products</h1>
        <a href="/products/add" class="btn btn-primary mb-3">Add Product</a>

        <form action="/products" method="GET" class="mb-3">
            <div class="row">
                <div class="col-md-4">
                    <input type="text" name="search" class="form-control" placeholder="Search by name" value="<%= search || '' %>">
                </div>
                <div class="col-md-4">
                    <select name="categoryId" class="form-select">
                        <option value="">All Categories</option>
                        <% categories.forEach(category => { %>
                            <option value="<%= category.id %>" <%= categoryId == category.id ? 'selected' : '' %>>
                                <%= category.name %>
                            </option>
                        <% }); %>
                    </select>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">Filter</button>
                    <a href="/products" class="btn btn-secondary">Clear</a>
                </div>
            </div>
        </form>

        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Category ID</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                    <tr>
                        <td><%= product.id %></td>
                        <td><%= product.name %></td>
                        <td><%= product.category.name %></td>
                        <td><%= product.categoryId %></td>
                        <td>
                            <a href="/products/edit/<%= product.id %>" class="btn btn-sm btn-warning">Edit</a>
                            <form action="/products/<%= product.id %>/delete" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <nav>
            <ul class="pagination">
                <% for(let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= currentPage == i ? 'active' : '' %>">
                        <a class="page-link" href="/products?page=<%= i %>&search=<%= search || '' %>&categoryId=<%= categoryId || '' %>"><%= i %></a>
                    </li>
                <% } %>
            </ul>
        </nav>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>